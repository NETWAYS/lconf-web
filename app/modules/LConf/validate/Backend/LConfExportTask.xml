<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/LConf/config/validators.xml"
>
	<ae:configuration>
		
		<validators>
			<validator class="string" name="satellites" required="false">
				<argument>satellites</argument>
			</validator>
			<validator class="string" name="preflight" required="false" >
				<argument>preflight</argument>
			</validator>
			
			<validator class="string" name="connection_id" required="true">
				<argument>connection_id</argument>
				<errors>
					<error>No connection id provided</error>
				</errors>
			</validator>
		</validators>
		
	</ae:configuration>
</ae:configurations>
